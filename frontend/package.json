{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:web": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently -k \"PORT=3001 BROWSER=none npm start\" \"wait-on tcp:3001 && electron .\"",
    "electron:build": "npm run build:web && electron-builder --mac"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@picovoice/porcupine-web": "^3.0.3",
    "@picovoice/porcupine-web-en-worker": "^2.1.7",
    "@picovoice/web-voice-processor": "^4.0.9",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yourco.schedulerai",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
